BEGIN {
  first = 1;
}

NF >= 4 && $0 ~ /[A-z][A-z]*/, $1 + 0 == -1 {
  if ($1 + 0 == -1) {
    printf(" /\n");
    first = 1;
  } else {
    if (!first) printf("\n");
    first = 0;
    printf("%s", $0);
  }
}
  
